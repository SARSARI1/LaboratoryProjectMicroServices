# Use OpenJDK 17 with Alpine Linux as the base image
FROM openjdk:17-jdk-alpine

# Create a directory for the application
WORKDIR /app

# Copy the JAR file generated by Maven to the container
COPY target/server-0.0.1-SNAPSHOT.jar app.jar

# Inform Docker that the container listens on port 9000
EXPOSE 9000

# Set environment variables for the database connection
ENV SPRING_DATASOURCE_URL=jdbc:postgresql://host.docker.internal:5432/laboratorydb
ENV SPRING_DATASOURCE_USERNAME=postgres
ENV SPRING_DATASOURCE_PASSWORD=root

# Set the entry point to run the application
ENTRYPOINT ["java", "-jar", "app.jar"]
